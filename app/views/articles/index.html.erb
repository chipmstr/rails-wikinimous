<div class="container mt-4">
  <h1 class="mb-4">All Articles</h1>

  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h2><%= link_to article.title, article_path(article), class: "text-decoration-none" %></h2>
          <p><%= truncate(article.content, length: 100) %></p>
        </div>
        <div>
          <%= link_to edit_article_path(article), class: 'btn btn-outline-secondary me-2' do %>
            <i class="fas fa-edit"></i> Edit
          <% end %>
          <%= link_to article_path(article), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' }, class: 'btn btn-outline-danger' do %>
            <i class="fas fa-trash"></i> Delete
          <% end %>

        </div>
      </li>
    <% end %>
  </ul>

  <div class="mt-4 mb-4">
    <%= link_to new_article_path, class: 'btn btn-primary' do %>
      <i class="fas fa-plus"></i> Create New Article
    <% end %>
  </div>
</div>
